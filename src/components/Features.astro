---
interface Feature {
	icon: string;
	title: string;
	description: string;
}

interface Props {
	title: string;
	subtitle: string;
	features?: Feature[];
}

const {
	title,
	subtitle,
	features = [
		{
			icon: "graph",
			title: "Search Everything, Instantly",
			description:
				"AI searches through thousands of docs across Confluence, GitHub, Slack, Jira, and Notion—so you don't have to wade through it all yourself.",
		},
		{
			icon: "agents",
			title: "Zero Judgment",
			description:
				"Ask the same question five times. Ask 'stupid' questions. The AI doesn't judge, doesn't get annoyed, and always helps you find what you need.",
		},
		{
			icon: "workflow",
			title: "Always Cites Sources",
			description: "Every answer shows exactly where it came from. Click through to verify, see context, and trust that you're getting accurate information.",
		},
		{
			icon: "llm",
			title: "Your Data Stays Yours",
			description: "Private and secure. We can't access your data, and neither can anyone else. Bring your own LLM or use ours—you're always in control.",
		},
		{
			icon: "onboard",
			title: "No More Interruptions",
			description: "Stop feeling guilty about asking teammates. Get answers instantly without pinging busy engineers or waiting for someone to get back from vacation.",
		},
		{
			icon: "sync",
			title: "Always Up to Date",
			description: "Real-time sync means answers reflect your latest docs, code, and decisions. No more outdated information leading you astray.",
		},
	],
} = Astro.props;

