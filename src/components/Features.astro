---

<section class="py-20 px-4 sm:px-6 lg:px-8" id="features">
	<div class="max-w-6xl mx-auto">
		<div class="text-center mb-16">
			<h2 class="text-3xl sm:text-4xl font-bold text-text-white mb-4">
				{title}
			</h2>
			<p class="text-lg text-text-gray max-w-2xl mx-auto">
				{subtitle}
			</p>
		</div>

		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
			{
				features.map((feature) => (
					<div class="group p-6 rounded-xl bg-white/[0.02] border border-white/5 hover:border-white/10 transition-all duration-300">
						<div class="w-12 h-12 rounded-lg bg-gradient-to-br from-primary/20 to-accent/20 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
							<svg
								class="w-6 h-6 text-primary"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24"
								set:html={icons[feature.icon]}
							/>
						</div>
						<h3 class="text-lg font-semibold text-text-white mb-2">{feature.title}</h3>
						<p class="text-sm text-text-gray leading-relaxed">{feature.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>
