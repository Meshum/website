<div id="cookie-banner" class="fixed bottom-0 left-0 right-0 z-999 m-4 max-w-100vw overflow-x-hidden hidden">
	<div class="cookie-banner-content">
		<div class="cookie-banner-inner">
			<!-- Gradient background -->
			<div class="absolute inset-0 bg-linear-to-br from-primary/10 to-accent/10 rounded-2xl"></div>
			<div class="absolute inset-0 border border-border rounded-2xl"></div>

			<div class="relative flex flex-col sm:flex-row gap-6 items-start sm:items-center justify-between">
				<div class="flex-1">
					<h3 class="text-lg font-semibold text-foreground mb-2">We value your privacy</h3>
					<p class="text-sm text-muted">
						This website uses Microsoft Clarity to understand how visitors interact with our site through anonymous usage analytics. By accepting, you consent to the collection of this data. We do not collect personally identifiable information or share your data with third parties beyond Microsoft's analytics service. You can decline and still use the website normally.
					</p>
				</div>
				<div class="flex gap-3 shrink-0">
					<button id="cookie-decline" class="bg-accent text-elevated whitespace-nowrap px-6 py-2 rounded-lg font-medium transition-colors">
						Decline
					</button>
					<button id="cookie-accept" class="bg-primary whitespace-nowrap px-6 py-2 rounded-lg font-medium">
						Accept
					</button>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	@media (prefers-reduced-motion: no-preference) {
		#cookie-banner {
			animation: slideUp 0.3s ease-out;
		}
	}

	.cookie-banner-content {
		max-width: 1200px;
		margin: 0 auto;
		width: 100%;
	}

	.cookie-banner-inner {
		position: relative;
		padding: 1.5rem;
		backdrop-filter: blur(12px);
		background: rgba(255, 255, 255, 0.95);
		border-radius: 1rem;
		box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
	}

	@media (prefers-color-scheme: dark) {
		.cookie-banner-inner {
			background: rgba(17, 24, 39, 0.95);
			box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
		}
	}

	@keyframes slideUp {
		from {
			transform: translateY(100%);
			opacity: 0;
		}
		to {
			transform: translateY(0);
			opacity: 1;
		}
	}

	@media (max-width: 640px) {
		.cookie-banner-inner {
			padding: 1rem;
		}
	}
</style>

<script is:inline>
	const CONSENT_KEY = 'cookie-consent';
	const consent = localStorage.getItem(CONSENT_KEY);

	if (consent === 'approved') {
		(function(c,l,a,r,i,t,y){
			c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
			t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
			y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
		})(window, document, "clarity", "script", "uo5x4zjccp");

		window.clarity('consentv2', {
			ad_Storage: "granted",
			analytics_Storage: "granted"
		});
	} else if (consent === 'declined') {
		window.clarity('consentv2', {
			ad_Storage: "denied",
			analytics_Storage: "denied"
		});
	} else if (consent === null && navigator.globalPrivacyControl !== true) {
		document.getElementById('cookie-banner')?.classList.remove('hidden');

		document.getElementById('cookie-decline')?.addEventListener('click', () => {
			localStorage.setItem(CONSENT_KEY, 'declined');

			location.reload();
		});

		document.getElementById('cookie-accept')?.addEventListener('click', () => {
			localStorage.setItem(CONSENT_KEY, 'approved');

			location.reload();
		});
	}
</script>

