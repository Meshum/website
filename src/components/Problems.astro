---
interface Problem {
	stat: string;
	label: string;
	description: string;
}

interface Props {
	title?: string;
	problems?: Problem[];
}

const {
	title = "You're not alone",
	problems = [
		{
			stat: "Every day",
			label: "you avoid asking",
			description: "Afraid to bother teammates by asking the same question twice. So you waste hours searching yourself, or just give up.",
		},
		{
			stat: "Thousands",
			label: "of docs you'll never read",
			description:
				"Knowledge buried in Confluence, Slack threads, GitHub, Jira. Too overwhelming to find what you need when you need it.",
		},
		{
			stat: "Weeks",
			label: "feeling lost as a new hire",
			description: "Tribal knowledge lives in people's heads. You don't know what you don't know, and you're afraid to keep asking.",
		},
		{
			stat: "Days",
			label: "waiting for a response",
			description: "You need one answer to move forward. But the person who knows is busy, in a different timezone, or on vacation.",
		},
	],
} = Astro.props;
---

<section class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-darker">
	<div class="max-w-6xl mx-auto">
		<div class="text-center mb-16">
			<h2 class="text-3xl sm:text-4xl font-bold text-text-white">
				{title}
			</h2>
		</div>

		<div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
			{
				problems.map((problem) => (
					<div class="text-center p-6">
						<div class="gradient-text text-3xl sm:text-4xl font-bold mb-1">{problem.stat}</div>
						<div class="text-sm font-medium text-text-white mb-3">{problem.label}</div>
						<p class="text-sm text-text-gray leading-relaxed">{problem.description}</p>
					</div>
				))
			}
		</div>
	</div>
</section>
