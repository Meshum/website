---
interface UseCase {
	title: string;
	description: string;
	benefit: string;
}

interface Props {
	title: string;
	subtitle: string;
	useCases?: UseCase[];
}

const {
	title,
	subtitle,
	useCases = [
		{
			title: "Architect PoC Planning",
			description:
				"Open the dashboard and search 'Can we build X with our current stack?' Get instant answers from docs, past decisions, and code—no need to schedule a meeting with every team lead.",
			benefit: "Hours saved per PoC",
		},
		{
			title: "Meeting Prevention",
			description: "Instead of pinging engineers with 'How does feature Y work?', search Meshum's dashboard. Team-specific AI agents surface answers from your codebase, docs, and discussion history.",
			benefit: "Fewer interruptions",
		},
		{
			title: "Faster Onboarding",
			description: "New hires open Meshum and type 'How do I deploy to staging?' The dashboard returns a guide pulled from runbooks, recent deployments, and team docs—always up to date.",
			benefit: "~1 week saved per hire",
		},
		{
			title: "Cross-Team Decisions",
			description: "Type 'Can Platform support real-time notifications for the mobile app?' into the dashboard. Get answers from both teams' domains in seconds instead of waiting days.",
			benefit: "Unblocked decisions",
		},
		{
			title: "Incident Response",
			description: "During an outage, search 'When did we see this error before?' in the dashboard to instantly surface past incidents, related runbooks, and the code changes that fixed it.",
			benefit: "Faster resolution",
		},
		{
			title: "Technical Debt",
			description: "Use the dashboard to query 'What services still use the old auth library?' and find patterns and dependencies across repos without manual searching.",
			benefit: "Proactive insights",
		},
	],
} = Astro.props;
---

<section class="py-20 px-4 sm:px-6 lg:px-8" id="use-cases">
	<div class="max-w-6xl mx-auto">
		<div class="text-center mb-16">
			<h2 class="text-3xl sm:text-4xl font-bold text-text-white mb-4">
				{title}
			</h2>
			<p class="text-lg text-text-gray max-w-2xl mx-auto">
				{subtitle}
			</p>
		</div>

		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
			{
				useCases.map((useCase) => (
					<div class="p-6 rounded-xl border border-white/5 hover:border-primary/30 transition-colors">
						<h3 class="text-lg font-semibold text-text-white mb-2">{useCase.title}</h3>
						<p class="text-sm text-text-gray leading-relaxed mb-4">{useCase.description}</p>
						<div class="text-xs font-medium text-primary">{useCase.benefit}</div>
					</div>
				))
			}
		</div>
	</div>
</section>
