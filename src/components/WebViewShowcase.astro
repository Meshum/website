---
// Interactive browser window mockup showcasing the AI search interface
---

<div class="max-w-5xl mx-auto fade-in" style="animation-delay: 0.5s;">
	<div class="relative rounded-2xl overflow-hidden border border-border shadow-2xl bg-surface backdrop-blur">
		<!-- Browser chrome with traffic lights and URL bar -->
		<div class="flex items-center gap-2 px-4 py-3 bg-elevated border-b border-border">
			<div class="flex gap-1.5">
				<div class="w-3 h-3 rounded-full bg-red-500/80"></div>
				<div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
				<div class="w-3 h-3 rounded-full bg-green-500/80"></div>
			</div>
			<div class="flex-1 mx-4">
				<div class="px-3 py-1.5 rounded-md bg-surface border border-border text-xs text-muted font-technical">
					company.meshum.dev
				</div>
			</div>
		</div>

		<!-- Web view content showing AI search interface -->
		<div class="p-4 md:p-8 bg-linear-to-br from-page/50 to-surface/50 backdrop-blur">
			<!-- Search status indicator -->
			<div class="mb-6 demo-searching opacity-0">
				<div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-primary/10 border border-primary/20 text-sm">
					<div class="w-2 h-2 rounded-full bg-primary animate-pulse"></div>
					<span class="font-medium text-foreground">AI searching across 12 sources...</span>
				</div>
			</div>

			<div class="space-y-4">
				<!-- User question -->
				<div class="flex items-start gap-3 demo-question opacity-0">
					<div class="hidden md:flex w-8 h-8 rounded-full bg-accent/20 items-center justify-center shrink-0">
						<span class="text-sm font-semibold text-accent">You</span>
					</div>
					<div class="flex-1">
						<div class="px-4 py-3 rounded-xl bg-surface border border-border shadow-sm">
							<p class="font-body text-foreground"><span class="demo-typed-text"></span><span class="demo-cursor">|</span></p>
						</div>
					</div>
				</div>

				<!-- AI response with primary result -->
				<div class="flex items-start gap-3 demo-result opacity-0">
					<div class="hidden md:flex w-8 h-8 rounded-full bg-linear-to-br from-primary to-accent items-center justify-center shrink-0 shadow-glow-sm">
						<svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
						</svg>
					</div>
					<div class="flex-1">
						<div class="px-4 py-3 rounded-xl bg-elevated border border-border shadow-sm">
							<div class="flex items-start justify-between gap-3 mb-2">
								<p class="text-xs font-semibold text-primary uppercase tracking-wider">Primary Result</p>
								<span class="text-xs text-muted">src/middleware/rateLimit.ts</span>
							</div>
							<p class="font-body text-foreground font-medium mb-2">
								"Rate limiting implementation uses token bucket algorithm per API key. Standard tier: 1000 req/hr, Premium tier: 5000 req/hr."
							</p>
							<div class="flex items-center gap-2 text-xs text-muted">
								<svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
								</svg>
								<span>Updated 3 days ago</span>
							</div>
						</div>
					</div>
				</div>

				<!-- Additional related results -->
				<div class="ml-11 space-y-2 demo-sources opacity-0">
					<div class="px-4 py-2 rounded-lg bg-page border border-border">
						<div class="flex items-center justify-between gap-3 mb-1">
							<p class="text-xs font-semibold text-muted">PR #847: Add rate limiting</p>
							<svg class="w-4 h-4 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
							</svg>
						</div>
						<p class="text-sm text-foreground">"Implemented token bucket for API rate limiting..."</p>
					</div>

					<div class="px-4 py-2 rounded-lg bg-page border border-border">
						<div class="flex items-center justify-between gap-3 mb-1">
							<p class="text-xs font-semibold text-muted">api-docs.md</p>
							<svg class="w-4 h-4 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
							</svg>
						</div>
						<p class="text-sm text-foreground">"Rate limits: Standard 1000/hr, Premium 5000/hr"</p>
					</div>

					<div class="px-4 py-2 rounded-lg bg-page border border-border">
						<div class="flex items-center justify-between gap-3 mb-1">
							<p class="text-xs font-semibold text-muted">#eng-platform on Slack</p>
							<svg class="w-4 h-4 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
							</svg>
						</div>
						<p class="text-sm text-foreground">"Discussion about choosing token bucket vs leaky bucket"</p>
					</div>
				</div>

				<!-- Search results metadata -->
				<div class="ml-11 flex items-center gap-4 text-xs text-muted demo-metadata opacity-0">
					<span>4 sources across GitHub, Slack, and docs</span>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	/* Subtle glow effect for AI avatar */
	.shadow-glow-sm {
		box-shadow: 0 0 10px rgba(179, 69, 243, 0.2), 0 0 20px rgba(0, 142, 150, 0.15);
	}

	/* Fade in animation */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.fade-in {
		opacity: 0;
		animation: fadeIn 0.8s ease-out forwards;
	}

	/* Cursor blinking animation */
	@keyframes blink {
		0%, 49% {
			opacity: 1;
		}
		50%, 100% {
			opacity: 0;
		}
	}

	.demo-cursor {
		animation: blink 1s step-end infinite;
	}

	.demo-cursor.finished {
		animation: none;
		opacity: 0;
	}

	/* Fade in for demo elements */
	@keyframes demoFadeIn {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.demo-fade-in {
		animation: demoFadeIn 0.4s ease-out forwards;
	}

	/* Fade in without movement for reduced motion */
	@keyframes fadeInNoMotion {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	.fade-in {
		opacity: 0;
		animation: fadeIn 0.8s ease-out forwards;
	}

	/* Disable animations for reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.demo-fade-in {
			animation: none;
		}
		.demo-cursor {
			animation: none;
		}
		.fade-in {
			animation: fadeInNoMotion 0.8s ease-out forwards !important;
		}
	}
</style>

<script>
	// Only run animations if user hasn't enabled reduced motion
	const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

	if (!prefersReducedMotion) {
		const questionText = "What are the rate limits for our API?";
		const typedTextElement = document.querySelector('.demo-typed-text');
		const cursorElement = document.querySelector('.demo-cursor');
		const questionContainer = document.querySelector('.demo-question');
		const searchingContainer = document.querySelector('.demo-searching');
		const resultContainer = document.querySelector('.demo-result');
		const sourcesContainer = document.querySelector('.demo-sources');
		const metadataContainer = document.querySelector('.demo-metadata');

		let charIndex = 0;

		// Typing animation function
		function typeCharacter() {
			if (charIndex < questionText.length) {
				if (typedTextElement) {
					typedTextElement.textContent += questionText[charIndex];
				}
				charIndex++;
				setTimeout(typeCharacter, 50); // 50ms per character
			} else {
				// Typing complete, hide cursor after a brief pause
				setTimeout(() => {
					if (cursorElement) {
						cursorElement.classList.add('finished');
					}
					// Show searching status
					setTimeout(showSearching, 300);
				}, 500);
			}
		}

		// Show searching status
		function showSearching() {
			if (searchingContainer) {
				searchingContainer.classList.add('demo-fade-in');
				searchingContainer.style.opacity = '1';
			}
			// Show results after searching
			setTimeout(showResults, 1500);
		}

		// Show results
		function showResults() {
			// Hide searching
			if (searchingContainer) {
				searchingContainer.style.opacity = '0';
			}
			// Show result
			setTimeout(() => {
				if (resultContainer) {
					resultContainer.classList.add('demo-fade-in');
					resultContainer.style.opacity = '1';
				}
				// Show sources after main result
				setTimeout(showSources, 400);
			}, 300);
		}

		// Show additional sources
		function showSources() {
			if (sourcesContainer) {
				sourcesContainer.classList.add('demo-fade-in');
				sourcesContainer.style.opacity = '1';
			}
			// Show metadata last
			setTimeout(showMetadata, 300);
		}

		// Show metadata
		function showMetadata() {
			if (metadataContainer) {
				metadataContainer.classList.add('demo-fade-in');
				metadataContainer.style.opacity = '1';
			}
		}

		// Start the animation sequence when component is in view
		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting && questionContainer) {
					// Show question container first
					questionContainer.classList.add('demo-fade-in');
					questionContainer.style.opacity = '1';
					// Start typing after container fades in
					setTimeout(typeCharacter, 400);
					// Only run once
					observer.disconnect();
				}
			});
		}, { threshold: 0.5 });

		if (questionContainer) {
			observer.observe(questionContainer);
		}
	} else {
		// For reduced motion, show everything immediately (no animations)
		const typedTextElement = document.querySelector('.demo-typed-text');
		const questionContainer = document.querySelector('.demo-question');
		const searchingContainer = document.querySelector('.demo-searching');
		const resultContainer = document.querySelector('.demo-result');
		const sourcesContainer = document.querySelector('.demo-sources');
		const metadataContainer = document.querySelector('.demo-metadata');
		const cursorElement = document.querySelector('.demo-cursor');

		if (typedTextElement) {
			typedTextElement.textContent = "What are the rate limits for our API?";
		}
		if (cursorElement) {
			cursorElement.style.display = 'none';
		}
		if (questionContainer) {
			questionContainer.style.opacity = '1';
		}
		// Don't show searching indicator in reduced motion - go straight to results
		if (searchingContainer) {
			searchingContainer.style.display = 'none';
		}
		if (resultContainer) {
			resultContainer.style.opacity = '1';
		}
		if (sourcesContainer) {
			sourcesContainer.style.opacity = '1';
		}
		if (metadataContainer) {
			metadataContainer.style.opacity = '1';
		}
	}
</script>
