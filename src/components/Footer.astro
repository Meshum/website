---
// Reusable Footer component that appears on all pages
import Logo from '../../public/logo.svg';
---

<footer class="py-12 bg-elevated border-t border-border">
	<div class="max-w-7xl mx-auto px-6">
		<div class="flex flex-col md:flex-row justify-between items-center gap-6">
			<div class="flex items-center gap-4">
				<Logo class="w-10 h-8" />
				<div>
					<span class="font-heading font-bold text-2xl text-foreground">Meshum</span>
					<p class="font-body text-sm text-foreground/70 mt-1">Stop searching. Start shipping.</p>
				</div>
			</div>

			<nav class="flex gap-8 font-body text-sm">
				<a href="/privacy" class="text-foreground/70 hover:text-primary transition-colors">Privacy</a>
				<a href="#" class="text-foreground/70 hover:text-primary transition-colors">Terms</a>
				<a href="/contact" class="text-foreground/70 hover:text-primary transition-colors">Contact</a>
			</nav>
		</div>
	</div>
</footer>
