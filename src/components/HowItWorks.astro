---
interface Step {
	number: string;
	title: string;
	description: string;
}

interface Props {
	title?: string;
	subtitle?: string;
	steps?: Step[];
}

const {
	title = "How it works",
	subtitle = "Connect your tools once. Then ask anything and get instant answers—no meetings, no interruptions, no searching.",
	steps = [
		{
			number: "01",
			title: "Connect your tools",
			description:
				"Link GitHub, Jira, Confluence, Notion, Slack, and more. Your team keeps using their existing tools—Meshum syncs everything in real-time.",
		},
		{
			number: "02",
			title: "Knowledge graph builds automatically",
			description:
				"When a PR references a Jira ticket that links to Confluence docs, Meshum connects all three—making the full context searchable from one place.",
		},
		{
			number: "03",
			title: "Ask your question",
			description:
				"Type your question into Meshum's dashboard. The AI searches across all your tools, understands context and relationships, and always cites its sources.",
		},
		{
			number: "04",
			title: "Get answers instantly",
			description:
				"No waiting for teammates to respond. No scheduling meetings. Just instant answers pulled from your docs, code, tickets, and conversations—verified with sources.",
		},
	],
} = Astro.props;
---

<section class="py-16 px-4 sm:px-6 lg:px-8 bg-bg-darker" id="how-it-works">
	<div class="max-w-6xl mx-auto">
		<div class="text-center mb-12">
			<h2 class="text-3xl sm:text-4xl font-bold text-text-white mb-3">
				{title}
			</h2>
			<p class="text-base text-text-gray max-w-2xl mx-auto">
				{subtitle}
			</p>
		</div>

		<div class="grid md:grid-cols-2 gap-6">
			{
				steps.map((step) => (
					<div class="flex gap-4 p-5 rounded-lg bg-white/[0.02] border border-white/5 hover:border-white/10 transition-colors">
						<div class="flex-shrink-0">
							<div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary/20 to-accent/20 flex items-center justify-center border border-primary/30">
								<span class="text-sm font-bold gradient-text">{step.number}</span>
							</div>
						</div>
						<div>
							<h3 class="text-lg font-semibold text-text-white mb-2">{step.title}</h3>
							<p class="text-sm text-text-gray leading-relaxed">{step.description}</p>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
