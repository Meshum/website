---
import CTA from "../components/CTA.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us - Meshum" description="Get in touch with the Meshum team. Whether you have questions, want a demo, or need support, we're here to help.">
	<!-- Hero section -->
	<Hero
		label="Contact Us"
		heading="Let's talk about your"
		gradientText="knowledge challenges."
		subheading="Whether you want a demo, have questions, or just want to chat about how Meshum can help your teamâ€”we'd love to hear from you."
		variant="full-screen"
	/>

	<!-- Contact Form -->
	<section class="py-32 bg-page">
		<div class="max-w-3xl mx-auto px-6">
			<div class="text-center mb-12">
				<div class="inline-block mb-6">
					<span class="px-4 py-2 rounded-full bg-primary/10 border border-primary/20 text-primary text-sm font-medium">
						Get in Touch
					</span>
				</div>
				<h2 class="font-heading text-3xl md:text-4xl font-bold text-foreground mb-4">
					Send us a message
				</h2>
				<p class="font-body text-lg text-muted">
					Fill out the form below and we'll get back to you as soon as possible.
				</p>
			</div>

			<form action="https://formspree.io/f/mnnevryk" method="POST" class="space-y-6">
				<div class="grid md:grid-cols-2 gap-6">
					<div>
						<label for="name" class="block text-sm font-heading font-semibold text-foreground mb-2">
							Name <span class="text-primary">*</span>
						</label>
						<input
							type="text"
							id="name"
							name="name"
							required
							class="w-full px-4 py-3 rounded-lg bg-surface border border-border text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all font-body"
							placeholder="Your name"
						/>
					</div>
					<div>
						<label for="email" class="block text-sm font-heading font-semibold text-foreground mb-2">
							Email <span class="text-primary">*</span>
						</label>
						<input
							type="email"
							id="email"
							name="email"
							required
							class="w-full px-4 py-3 rounded-lg bg-surface border border-border text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all font-body"
							placeholder="you@company.com"
						/>
					</div>
				</div>

				<div>
					<label for="company" class="block text-sm font-heading font-semibold text-foreground mb-2">
						Company
					</label>
					<input
						type="text"
						id="company"
						name="company"
						class="w-full px-4 py-3 rounded-lg bg-surface border border-border text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all font-body"
						placeholder="Your company name"
					/>
				</div>

				<div>
					<label for="subject" class="block text-sm font-heading font-semibold text-foreground mb-2">
						Subject <span class="text-primary">*</span>
					</label>
					<select
						id="subject"
						name="subject"
						required
						class="w-full px-4 py-3 rounded-lg bg-surface border border-border text-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all font-body"
					>
						<option value="">Select a topic...</option>
						<option value="demo">Request a Demo</option>
						<option value="sales">Sales Inquiry</option>
						<option value="support">Customer Support</option>
						<option value="partnership">Partnership</option>
						<option value="careers">Careers</option>
						<option value="other">Other</option>
					</select>
				</div>

				<div>
					<label for="message" class="block text-sm font-heading font-semibold text-foreground mb-2">
						Message <span class="text-primary">*</span>
					</label>
					<textarea
						id="message"
						name="message"
						required
						rows="6"
						class="w-full px-4 py-3 rounded-lg bg-surface border border-border text-foreground placeholder-muted focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all resize-none font-body"
						placeholder="Tell us how we can help..."
					></textarea>
				</div>

				<div>
					<button
						type="submit"
						class="w-full px-8 py-4 rounded-lg bg-linear-to-r from-primary to-accent text-white font-heading font-bold text-lg shadow-lg hover:shadow-xl hover:scale-105 transition-all"
					>
						Send Message
					</button>
				</div>
			</form>
		</div>
	</section>

	<!-- Alternative Contact Info -->
	<section class="py-32 bg-elevated">
		<div class="max-w-4xl mx-auto px-6 text-center">
			<div class="inline-block mb-6">
				<span class="px-4 py-2 rounded-full bg-primary/10 border border-primary/20 text-primary text-sm font-medium">
					Prefer a different channel?
				</span>
			</div>

			<h2 class="font-heading text-3xl md:text-4xl font-bold text-foreground mb-6 leading-tight">
				We're active across multiple platforms
			</h2>

			<p class="font-body text-lg text-muted leading-relaxed mb-12 max-w-2xl mx-auto">
				Follow our journey, see what we're building, or reach out through your preferred platform.
			</p>

			<div class="flex flex-wrap justify-center gap-4">
				<a
					href="https://linkedin.com/company/elixus-software"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-surface border border-border font-heading font-semibold text-foreground hover:border-primary hover:text-primary transition-all"
				>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
					LinkedIn
				</a>
				<a
					href="https://github.com/meshum"
					target="_blank"
					rel="noopener noreferrer"
					class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-surface border border-border font-heading font-semibold text-foreground hover:border-primary hover:text-primary transition-all"
				>
					<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
					</svg>
					GitHub
				</a>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<CTA
		heading="Ready to get started?"
		subheading="Join the teams already using Meshum to unlock their collective knowledge."
		buttonText="Fill Out the Form"
		buttonLink="#"
		maxWidth="4xl"
	/>
</Layout>

<style>
	@keyframes gradient {
		0%, 100% {
			opacity: 0.3;
		}
		50% {
			opacity: 0.5;
		}
	}

	.animate-gradient {
		animation: gradient 8s ease-in-out infinite;
	}

	@keyframes gradient-text {
		0%, 100% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
	}

	.animate-gradient-text {
		background-size: 200% 200%;
		animation: gradient-text 6s ease-in-out infinite;
	}

	/* Fade in animation */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInNoMotion {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	.fade-in {
		opacity: 0;
		animation: fadeIn 0.8s ease-out forwards;
	}

	@media (prefers-reduced-motion: reduce) {
		.fade-in {
			animation: fadeInNoMotion 0.8s ease-out forwards !important;
		}
	}

	/* Smooth font rendering */
	* {
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
</style>
