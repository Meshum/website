---
import Logo from '../../public/logo.svg';
import CTA from "../components/CTA.astro";
import WebViewShowcase from "../components/WebViewShowcase.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Meshum - Stop searching. Start shipping." description="Save 2.4 hours per engineer, per day. Meshum connects your scattered knowledge into one AI layer.">
	<!-- Hero section with animated backgrounds -->
	<section class="relative min-h-screen flex items-center justify-center px-6 py-20 bg-linear-to-br from-hero-bg-start via-hero-bg-mid to-hero-bg-end overflow-hidden">
		<!-- Subtle animated gradient overlay -->
		<div class="absolute inset-0 opacity-30 dark:opacity-40 bg-linear-to-br from-primary/5 via-transparent to-accent/5 animate-gradient"></div>

		<!-- Subtle animated blobs  -->
		<div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 dark:bg-primary/20 rounded-full mix-blend-multiply dark:mix-blend-lighten filter blur-3xl opacity-30 animate-blob"></div>
		<div class="absolute top-1/3 right-1/4 w-96 h-96 bg-accent/10 dark:bg-accent/20 rounded-full mix-blend-multiply dark:mix-blend-lighten filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
		<div class="absolute bottom-1/4 left-1/3 w-96 h-96 bg-primary/5 dark:bg-primary/15 rounded-full mix-blend-multiply dark:mix-blend-lighten filter blur-3xl opacity-30 animate-blob animation-delay-4000"></div>

		<div class="max-w-7xl w-full relative z-10">
			<div class="text-center mb-16">
				<!-- Label box  -->
				<div class="inline-block mb-8 fade-in">
					<span class="px-4 py-2 rounded-full bg-elevated/80 backdrop-blur-sm border border-border text-muted text-sm font-medium shadow-xl/20 shadow-primary">
						Your Company's Brain
					</span>
				</div>

				<!-- Hero Headline -->
				<h1 class="font-heading text-5xl md:text-6xl lg:text-7xl font-bold text-foreground mb-6 leading-tight tracking-tight fade-in" style="animation-delay: 0.1s;">
					stop searching.
					<br>
					<span class="bg-linear-to-r from-primary to-accent bg-clip-text text-transparent animate-gradient-text">
						start shipping.
					</span>
				</h1>

				<!-- Subheading with "Ask in plain English"  -->
				<p class="font-body text-xl md:text-2xl text-muted max-w-3xl mx-auto mb-16 leading-relaxed fade-in" style="animation-delay: 0.2s;">
					Your codebase, docs, and Slack history. One search. Instant answers with source links.
				</p>
			</div>

			<!-- Interactive browser mockup showcasing AI search -->
			<WebViewShowcase />
		</div>

		<!-- Scroll indicator arrow -->
		<div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
			<div class="flex flex-col items-center gap-2 opacity-60 hover:opacity-100 transition-opacity cursor-pointer" onclick="document.querySelector('#tldr-section').scrollIntoView({behavior: 'smooth'})">
				<span class="text-xs text-foreground/70 font-medium uppercase tracking-wider">Scroll</span>
				<svg class="w-6 h-6 text-foreground/70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
				</svg>
			</div>
		</div>
	</section>

	<!-- TL;DR Section (conversion boost idea) -->
	<section id="tldr-section" class="py-16 bg-surface/50 backdrop-blur border-y border-border scroll-fade-in">
		<div class="max-w-7xl mx-auto px-6">
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<!-- Left: TL;DR content -->
				<div class="flex flex-col items-start gap-4">
					<div class="shrink-0">
						<div class="px-3 py-1 rounded-lg bg-accent/10 border border-accent/20 font-heading font-bold text-sm text-accent dark:text-primary uppercase tracking-wider">
							TL;DR
						</div>
					</div>
					<div class="flex-1">
						<ul class="font-body text-lg text-foreground leading-relaxed space-y-2">
							<li><span class="font-semibold">Connects</span> GitHub, Slack, Confluence, Notion into one AI layer</li>
							<li><span class="font-semibold">Ask</span> questions in plain English, get cited answers instantly</li>
							<li><span class="font-semibold">Save</span> 2.4 hours per engineer, per day</li>
							<li><span class="font-semibold">Setup</span> in 5 minutes, zero training required</li>
						</ul>
					</div>
				</div>

				<!-- Right: Quick stats visualization -->
				<div class="relative">
					<div class="rounded-2xl border-2 border-border bg-surface p-8 shadow-xl">
						<h3 class="font-heading text-2xl font-bold text-foreground mb-6">by the numbers</h3>
						<div class="space-y-6">
							<div class="flex items-end gap-4">
								<div class="text-5xl font-heading font-bold bg-linear-to-r from-primary to-accent bg-clip-text text-transparent">2.4hrs</div>
								<div class="pb-2 text-sm text-muted font-body">saved per engineer daily</div>
							</div>
							<div class="flex items-end gap-4">
								<div class="text-5xl font-heading font-bold bg-linear-to-r from-primary to-accent bg-clip-text text-transparent">0.3s</div>
								<div class="pb-2 text-sm text-muted font-body">average answer time</div>
							</div>
							<div class="flex items-end gap-4">
								<div class="text-5xl font-heading font-bold bg-linear-to-r from-primary to-accent bg-clip-text text-transparent">5min</div>
								<div class="pb-2 text-sm text-muted font-body">setup time</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- The Problem - Professional/Informal Balance  -->
	<section class="py-32 bg-page scroll-fade-in">
		<div class="max-w-7xl mx-auto px-6">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<!-- Problem Text -->
				<div>
					<div class="inline-block mb-6">
						<span class="px-4 py-2 rounded-full bg-red-500/10 border border-red-500/20 text-red-600 dark:text-red-400 text-sm font-medium">
							The Problem
						</span>
					</div>

					<h2 class="font-heading text-4xl md:text-5xl font-bold text-foreground leading-tight pb-2">
						"only sarah knows how that works"
					</h2>

					<h3 class="font-bold text-2xl text-muted mb-6">
						and she's not working today
					</h3>

					<div class="space-y-4 text-lg text-foreground font-body leading-relaxed">
						<p>
							Your team's knowledge lives in a dozen different tools. Code in GitHub. Decisions buried in Slack threads. That one critical doc someone wrote in Notion six months ago.
						</p>
						<p>
							You waste <a href="https://myhours.com/articles/meeting-statistics-2025" target="_blank" rel="noopener noreferrer" class="font-semibold text-primary underline decoration-primary/30 hover:decoration-primary transition-colors">2+ hours daily</a> searching for context that already exists somewhere. Grepping codebases. Reading old PRs. Waiting for the one person who knows to respond.
						</p>
					</div>
				</div>

				<!-- Illustration -->
				<div class="relative">
					<div class="relative rounded-2xl border-2 border-border bg-surface p-8 shadow-xl">
						<!-- Scattered knowledge visualization -->
						<div class="space-y-3">
							<div class="flex items-center gap-3 p-3 rounded-lg bg-page border border-border">
								<div class="w-10 h-10 rounded-lg bg-tool-github flex items-center justify-center">
									<svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
										<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
									</svg>
								</div>
								<div class="flex-1">
									<div class="text-sm font-medium text-foreground">GitHub</div>
									<div class="text-xs text-muted">Code & pull requests</div>
								</div>
							</div>

							<div class="flex items-center gap-3 p-3 rounded-lg bg-page border border-border">
								<div class="w-10 h-10 rounded-lg bg-tool-slack flex items-center justify-center">
									<svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
										<path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zM18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312zM15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z"/>
									</svg>
								</div>
								<div class="flex-1">
									<div class="text-sm font-medium text-foreground">Slack</div>
									<div class="text-xs text-muted">Conversations & decisions</div>
								</div>
							</div>

							<div class="flex items-center gap-3 p-3 rounded-lg bg-page border border-border">
								<div class="w-10 h-10 rounded-lg bg-tool-confluence flex items-center justify-center">
									<svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
										<path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.824c5.063 0 9.176 4.113 9.176 9.176s-4.113 9.176-9.176 9.176-9.176-4.113-9.176-9.176S6.937 2.824 12 2.824zm.706 3.176v5.647l4.588 2.824-.706 1.176L11.294 12v-6h1.412z"/>
									</svg>
								</div>
								<div class="flex-1">
									<div class="text-sm font-medium text-foreground">Confluence</div>
									<div class="text-xs text-muted">Documentation</div>
								</div>
							</div>

							<div class="flex items-center gap-3 p-3 rounded-lg bg-page border border-border opacity-50">
								<div class="w-10 h-10 rounded-lg bg-foreground/10 flex items-center justify-center">
									<span class="text-xs font-semibold text-muted">+9</span>
								</div>
								<div class="flex-1">
									<div class="text-sm font-medium text-muted">Notion, Jira, Linear, and more...</div>
								</div>
							</div>
						</div>

						<!-- "?" overlay -->
						<div class="absolute inset-0 flex items-center justify-center">
							<div class="w-24 h-24 rounded-full bg-foreground/5 backdrop-blur-md border-2 border-foreground/10 flex items-center justify-center shadow-xl">
								<span class="text-5xl font-bold text-foreground/30">?</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- The Solution  -->
	<section class="relative py-16 md:py-32 overflow-hidden bg-linear-to-br from-solution-bg-start to-solution-bg-end scroll-fade-in">
		<div class="relative z-10 max-w-7xl mx-auto px-6">
			<div class="grid lg:grid-cols-2 gap-16 items-center">
				<!-- Visual Flow Diagram (Left side) -->
				<div class="relative order-2 lg:order-1">
					<div class="relative backdrop-blur-xl p-6 md:p-12 rounded-3xl border border-primary/10 shadow-2xl bg-solution-pill-bg">
						<!-- Mobile: Vertical Stack -->
						<div class="flex md:hidden flex-col items-center gap-3">
							<!-- Input sources -->
							<div class="flex flex-col gap-2 w-full max-w-[200px]">
								<div class="flex items-center gap-2 px-3 py-2 rounded-full bg-primary/5 border border-primary/20 backdrop-blur-sm transition-all hover:bg-primary/10">
									<div class="w-1.5 h-1.5 rounded-full bg-primary animate-pulse"></div>
									<span class="font-heading text-xs font-semibold text-foreground">GitHub</span>
								</div>
								<div class="flex items-center gap-2 px-3 py-2 rounded-full bg-accent/5 border border-accent/20 backdrop-blur-sm transition-all hover:bg-accent/10">
									<div class="w-1.5 h-1.5 rounded-full bg-accent animate-pulse" style="animation-delay: 0.3s;"></div>
									<span class="font-heading text-xs font-semibold text-foreground">Slack</span>
								</div>
								<div class="flex items-center gap-2 px-3 py-2 rounded-full bg-primary/5 border border-primary/20 backdrop-blur-sm transition-all hover:bg-primary/10">
									<div class="w-1.5 h-1.5 rounded-full bg-primary animate-pulse" style="animation-delay: 0.6s;"></div>
									<span class="font-heading text-xs font-semibold text-foreground">Notion</span>
								</div>
							</div>

							<!-- Arrow (down) -->
							<svg class="w-6 h-6 text-primary/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
							</svg>

							<!-- Meshum intelligence -->
							<div class="relative group">
								<div class="absolute inset-0 bg-linear-to-br from-primary to-accent blur-xl opacity-40 group-hover:opacity-60 transition-opacity"></div>
								<div class="relative w-20 h-20 rounded-xl bg-page flex items-center justify-center shadow-xl">
									<Logo class="w-10 h-10 text-white" />
								</div>
							</div>

							<!-- Arrow (down) -->
							<svg class="w-6 h-6 text-primary/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
							</svg>

							<!-- Output -->
							<div class="flex items-center gap-2 px-4 py-2.5 rounded-full bg-linear-to-r from-primary to-accent text-white shadow-lg">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="font-heading font-bold text-sm">Instant Answer</span>
							</div>
						</div>

						<!-- Desktop: Horizontal Flow -->
						<div class="hidden md:flex items-center justify-center gap-6">
							<!-- Input sources -->
							<div class="flex flex-col gap-3">
								<div class="flex items-center gap-2.5 px-4 py-2.5 rounded-full bg-primary/5 border border-primary/20 backdrop-blur-sm transition-all hover:bg-primary/10">
									<div class="w-2 h-2 rounded-full bg-primary animate-pulse"></div>
									<span class="font-heading text-sm font-semibold text-foreground">GitHub</span>
								</div>
								<div class="flex items-center gap-2.5 px-4 py-2.5 rounded-full bg-accent/5 border border-accent/20 backdrop-blur-sm transition-all hover:bg-accent/10">
									<div class="w-2 h-2 rounded-full bg-accent animate-pulse" style="animation-delay: 0.3s;"></div>
									<span class="font-heading text-sm font-semibold text-foreground">Slack</span>
								</div>
								<div class="flex items-center gap-2.5 px-4 py-2.5 rounded-full bg-primary/5 border border-primary/20 backdrop-blur-sm transition-all hover:bg-primary/10">
									<div class="w-2 h-2 rounded-full bg-primary animate-pulse" style="animation-delay: 0.6s;"></div>
									<span class="font-heading text-sm font-semibold text-foreground">Notion</span>
								</div>
							</div>

							<!-- Arrow (right) -->
							<svg class="w-8 h-8 text-primary/60 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
							</svg>

							<!-- Meshum intelligence -->
							<div class="relative group shrink-0">
								<div class="absolute inset-0 bg-linear-to-br from-primary to-accent blur-xl opacity-40 group-hover:opacity-60 transition-opacity"></div>
								<div class="relative w-24 h-24 rounded-2xl bg-page flex items-center justify-center shadow-xl">
									<Logo class="w-12 h-12 text-white" />
								</div>
							</div>

							<!-- Arrow (right) -->
							<svg class="w-8 h-8 text-primary/60 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
							</svg>

							<!-- Output -->
							<div class="flex items-center gap-2 px-5 py-3 rounded-full bg-linear-to-r from-primary to-accent text-white shadow-lg">
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
								</svg>
								<span class="font-heading font-bold text-sm whitespace-nowrap">Instant Answer</span>
							</div>
						</div>

						<div class="mt-6 text-center">
							<p class="text-xs text-muted">AI-powered semantic search • Real-time indexing • Source attribution</p>
						</div>
					</div>
				</div>

				<!-- Solution Text (Right side) -->
				<div class="order-1 lg:order-2">
					<div class="inline-block mb-6">
						<span class="px-4 py-2 rounded-full bg-solution-accent/10 border border-solution-accent/20 text-solution-accent text-sm font-medium">
							The Solution
						</span>
					</div>

					<h2 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-foreground mb-6 leading-tight">
						one source of truth.
						<br>
						powered by AI.
					</h2>

					<div class="space-y-4 text-base md:text-lg text-foreground font-body leading-relaxed mb-8">
						<p>
							<span class="font-semibold">Meshum unifies your knowledge sources</span> into a single AI layer. Code, docs, conversations, decisions—all connected and semantically searchable.
						</p>
						<p>
							Ask questions like you'd ask a teammate. Get answers with source citations. No query syntax, no training docs.
						</p>
					</div>

					<!-- Key benefits with colored icons -->
					<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
						<div class="flex items-start gap-3">
							<div class="w-10 h-10 rounded-lg bg-page/60 flex items-center justify-center shrink-0">
								<svg class="w-5 h-5 text-benefit-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
								</svg>
							</div>
							<div class="min-w-0">
								<div class="font-semibold text-foreground text-sm mb-1">instant answers</div>
								<div class="text-xs text-muted">semantic search across all sources</div>
							</div>
						</div>

						<div class="flex items-start gap-3">
							<div class="w-10 h-10 rounded-lg bg-page/60 flex items-center justify-center shrink-0">
								<svg class="w-5 h-5 text-benefit-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
								</svg>
							</div>
							<div class="min-w-0">
								<div class="font-semibold text-foreground text-sm mb-1">always up-to-date</div>
								<div class="text-xs text-muted">continuous sync</div>
							</div>
						</div>

						<div class="flex items-start gap-3">
							<div class="w-10 h-10 rounded-lg bg-page/60 flex items-center justify-center shrink-0">
								<svg class="w-5 h-5 text-benefit-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
								</svg>
							</div>
							<div class="min-w-0">
								<div class="font-semibold text-foreground text-sm mb-1">private and secure</div>
								<div class="text-xs text-muted">your data, your infrastructure</div>
							</div>
						</div>

						<div class="flex items-start gap-3">
							<div class="w-10 h-10 rounded-lg bg-page/60 flex items-center justify-center shrink-0">
								<svg class="w-5 h-5 text-benefit-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
								</svg>
							</div>
							<div class="min-w-0">
								<div class="font-semibold text-foreground text-sm mb-1">source citations</div>
								<div class="text-xs text-muted">verify every answer</div>
							</div>
						</div>
					</div>
				</div>
			</div>
